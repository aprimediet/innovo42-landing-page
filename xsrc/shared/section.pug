mixin section-title(title=null)
  .d-flex.flex-column.align-items-center
    h3.fonts--arvo.text-secondary.banner-text--subtitle
      = title
    img.section--underline(src='images/section-title-line.png')

mixin section-left-align(image = null, title = null, captions)
  .d-flex.flex-column-reverse.flex-md-row.align-items-center.px-3.px-md-0
    .d-flex.flex-column.pr-0.pr-md-5.w-50.section--container
      h3.fonts--arvo.text-secondary.banner-text--subtitle.section-text--subtitle
        = title
      hr.my-2
      - var _captions = captions.split('<spacing>')
      each caption in _captions
        p.section-text--caption
          = caption
    .d-flex.flex-column.w-50.ml-0.ml-md-auto.section--container
      if image
        hr.my-2.my-md-0
        img.w-65.mx-auto.ml-md-auto(src=image, alt=title)
        hr.my-2.my-md-0

