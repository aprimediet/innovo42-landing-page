mixin core-values(image = null, title = null, captions)
  .d-flex.flex-column.w-33.align-items-center.px-md-3.py-4.featured--core-values
    img.w-50(src=image, alt=title)

    hr.my-2

    h4.fonts--arvo.section-text--subtitle.text-secondary 
      = title
    hr.my-1

    span.section-text--caption.text-center
      = captions

mixin cta(captions, includeButton = false, url = 'javascript:;', buttonText = null)
  .d-flex.flex-column.justify-content-center.align-items-center.cta.text-center.px-5p
    h3.fonts--arvo.banner-text--subtitle.text-white 
      = captions
    if includeButton
      hr.my-3
      a.mx-auto.mx-md-0(href=url)
        button.btn.btn-primary.rounded-pill.btn-lg.px-5.py-xl-1.py-xxl-3.banner--button
          = buttonText
